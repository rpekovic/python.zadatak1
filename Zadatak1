while True:
    try:
        A = float(input("prvi broj:"))
        break
    except ValueError:
        print("greska uneste broj")
while True:
    try:
        B= float(input("driugi broj:"))
        break
    except ValueError:
        print("greska uneste broj")

operator= input("operator:")
while True:
    if operator == '+':
        rez=A+B
        print("rezultat :",rez)
        break
    elif operator == '-':
        rez=A-B
        print("rezultat :", rez)
        break
    elif operator =='*':
        rez=A*B
        print("rezultat :" , rez)
        break
    elif operator =='/':
        if B==0 :

            try:
                print("nije dozvoljeno deljenje sa nulom")

            except ValueError:
                print("nije dozvoljeno deljenje sa nulom")

            break
        rez = A / B
        print("rezultat :" , rez)
        break
    else :
        operator = input("operator nije dobar:")











